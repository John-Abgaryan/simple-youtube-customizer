{
  "manifest_version": 3,
  "name": "Simple Youtube Customizer",
  "version": "1.0.1",
  "description": "Customize YouTube colors and logo",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/android-chrome-192x192.png",
    "128": "icons/android-chrome-192x192.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Customize YouTube"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}